<%- include("partials/header.ejs") %>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="images/blog.png" alt="" width="72">
        <h1 class="display-5 fw-bold text-body-emphasis">Edit Post:</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Edit your post below:</p>

            <!-- Open up the edit page with the content of the post already in the Title and Post content -->
            <% if (locals.number !=-1) { const title=locals.postTitles[locals.number]; const
                post=locals.allPosts[locals.number];%>
                <div class="container d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <form action="/editPost" method="POST">
                        <input type="text" name="blogTitle"
                            class="p-4 p-md-3 mb-3 rounded bg-body-secondary form-control" value="<%=title%>">
                        </input>
                        <br>
                        <textarea name="blogPost" id="blogPost" rows="20" cols="100"
                            class="p-4 p-md-3 mb-3 rounded bg-body-secondary form-control"><%=post%></textarea>
                        <br><br>
                        <input type="hidden" name="number" value="<%=locals.number%>">
                        <button type="button submit" class="btn btn-primary btn-lg px-4 gap-3">Submit</button>
                    </form>
                </div>
                <% } %>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>